<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tpc_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@color/smart_text"
        android:src="@drawable/metrics"/>

    <TextView
        android:id="@+id/tpc_ordercode"
        android:layout_toRightOf="@+id/tpc_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tpc_orderdscr"
        android:layout_toRightOf="@+id/tpc_image"
        android:layout_below="@+id/tpc_ordercode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tpc_message"
        android:layout_toRightOf="@+id/tpc_image"
        android:layout_below="@+id/tpc_orderdscr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:textStyle="bold"
        />


</RelativeLayout>