<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageReport"
        android:layout_width="414dp"
        android:layout_height="433dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/componentlist"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/spinnerAvailIssue"
        android:layout_width="389dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinnepriority"
        android:layout_marginTop="160dp"
        android:background="@color/spinner_background"/>

    <Button
        android:id="@+id/button"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:onClick="clickReport"
        android:text="Report" />

    <TextView
        android:id="@+id/spinnepriority"
        android:layout_width="389dp"
        android:layout_height="40dp"
        android:layout_above="@+id/comments"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@color/spinner_background" />

    <TextView
        android:id="@+id/decisionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/spinnerAvailIssue"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/imageReport"
        android:layout_marginTop="100dp"
        android:text="Decision suggested" />

    <TextView
        android:id="@+id/priorityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnepriority"
        android:layout_centerHorizontal="true"
        android:text="Priority" />

    <TextView
        android:id="@+id/spinnerdefect"
        android:layout_width="389dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:background="@color/spinner_background" />

    <TextView
        android:id="@+id/defectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerAvailIssue"
        android:layout_toEndOf="@+id/button"
        android:text="Defect" />

    <TextView
        android:id="@+id/wsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="41dp"
        android:textSize="30dp"
        android:text="WORKSTATION:  " />

    <TextView
        android:id="@+id/orderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wsLabel"
        android:layout_centerHorizontal="true"
        android:text="Order: "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textWS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wsLabel"
        android:layout_toEndOf="@+id/wsLabel"
        android:text="TextView"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerAvailIssue"
        android:layout_alignTop="@+id/wsLabel"
        android:text="TextView"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/commentsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/comments"
        android:layout_centerHorizontal="true"
        android:text="Comments" />

    <EditText
        android:id="@+id/comments"
        android:layout_width="389dp"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/imageReport"
        android:layout_marginBottom="72dp"
        android:layout_toEndOf="@+id/textView"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/tqc_mic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/m2" />

</RelativeLayout>