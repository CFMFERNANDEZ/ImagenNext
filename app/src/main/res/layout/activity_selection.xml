<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/background"
        tools:context="com.epson.moverio.bt300.sample.samplehwkey.SelectionActivity"
        tools:ignore="">

        <RelativeLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/WSLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="600sp"
                android:layout_alignParentStart="true"
                android:textColor="@color/smartAccent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/selection_personname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/WSLabel"
                android:textColor="@color/smartAccent"
                android:layout_marginLeft="15dp"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignStart="@+id/WSLabel"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:src="@drawable/logocf" />


        </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smartTransparent"
        android:divider="@color/smart_background"
        android:dividerHeight="1dp"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/top_panel"
        android:textColor="@color/smart_text"></ListView>

</RelativeLayout>
