<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/mfseq_list_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@color/smart_text"
        android:src="@mipmap/assembly"/>

    <TextView
        android:id="@+id/mfseq_asmdscr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/mfseq_list_image"
        android:text="ASMDSCR"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mfseq_asmcode"
        android:layout_toRightOf="@+id/mfseq_list_image"
        android:layout_below="@+id/mfseq_asmdscr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:text="ASMDSCR"
        />

    <TextView
        android:id="@+id/mfseq_flowid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mfseq_asmcode"
        android:layout_alignBottom="@+id/mfseq_asmcode"
        android:layout_alignParentRight="true"
        android:text="ASMDSCR"
        android:textSize="50dp"
        />

    <TextView
        android:id="@+id/mfseq_serialn"
        android:layout_toRightOf="@+id/mfseq_asmcode"
        android:layout_below="@+id/mfseq_asmdscr"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ASMDSCR"
        />

</RelativeLayout>