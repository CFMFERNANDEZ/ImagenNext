<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/mfseq_list_image"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@color/smart_text"
        android:src="@drawable/assembly"/>

    <TextView
        android:id="@+id/mfseq_asmdscr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/smartAccent"/>

    <TextView
        android:id="@+id/mfseq_asmcode"
        android:layout_toRightOf="@+id/mfseq_list_image"
        android:layout_below="@+id/mfseq_asmdscr"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textSize="50dp"
        android:textColor="@color/smartAccent"
        />

    <TextView
        android:id="@+id/mfseq_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mfseq_asmcode"
        android:layout_alignBottom="@+id/mfseq_asmcode"
        android:layout_alignParentRight="true"
        android:textSize="50dp"
        />

    <TextView
        android:id="@+id/mfseq_serialn"
        android:layout_toRightOf="@+id/mfseq_asmcode"
        android:layout_below="@+id/mfseq_asmdscr"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textColor="@color/smartAccent"
        />

</RelativeLayout>